{
  "version": 2,
  "builds": [
    {
      "src": "app/vite.config.ts",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "app/dist"
      }
    },
    {
      "src": "backend/server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/app/dist/$1",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      },
      "continue": true
    },
    {
      "src": "/api/(.*)",
      "dest": "/backend/server.js"
    }
  ]
}
